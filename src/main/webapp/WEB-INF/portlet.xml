<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
<!-- Study -->
	<!-- Extension -->
						<portlet>
							<portlet-name>dpsExtensionStudies</portlet-name>
							<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
							
							<init-param>
					         <name>contextConfigLocation</name>
					         <value>/WEB-INF/context/studyExtension-portlet.xml</value>
					      	</init-param>
					      	<expiration-cache>0</expiration-cache>
							<supports>
								<mime-type>text/html</mime-type>
					         	<portlet-mode>view</portlet-mode>
							</supports>
							<supported-locale>en</supported-locale>
					        <supported-locale>ar</supported-locale>		
							<resource-bundle>extension</resource-bundle>
							<portlet-info>
								<title>Extension of Post Graduate Studies</title>
							</portlet-info>
						</portlet>
<!-- Registration -->
	<!-- Drop with W -->
		
						<portlet>
							<portlet-name>dpsRegistrationDropWithW</portlet-name>
							<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
							
							<init-param>
					         <name>contextConfigLocation</name>
					         <value>/WEB-INF/context/registrationDropW-portlet.xml</value>
					      	</init-param>
					      	<expiration-cache>0</expiration-cache>
							<supports>
								<mime-type>text/html</mime-type>
					         	<portlet-mode>view</portlet-mode>
							</supports>
							<supported-locale>en</supported-locale>
					        <supported-locale>ar</supported-locale>		
							<resource-bundle>messages/registration/dropWithW/dropwithw</resource-bundle>
							<portlet-info>
								<title>Drop with W of Post Graduate Studies</title>
							</portlet-info>
						</portlet>	
	<!-- Postponement of Studies -->
						<portlet>
							<portlet-name>dpsRegistrationPostpone</portlet-name>
							<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
							
							<init-param>
					         <name>contextConfigLocation</name>
					         <value>/WEB-INF/context/registrationPostpone-portlet.xml</value>
					      	</init-param>
					      	<expiration-cache>0</expiration-cache>
							<supports>
								<mime-type>text/html</mime-type>
					         	<portlet-mode>view</portlet-mode>
							</supports>
							<supported-locale>en</supported-locale>
					        <supported-locale>ar</supported-locale>		
							<resource-bundle>messages/registration/postpone/postpone</resource-bundle>
							<portlet-info>
								<title>Postponement of Studies</title>
							</portlet-info>
						</portlet>
<!-- Grade -->
	<!--  Grade Change -->
						<portlet>
							<portlet-name>dpsGradeGradeChange</portlet-name>
							<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>	
							<init-param>
					         <name>contextConfigLocation</name>
					         <value>/WEB-INF/context/gradeGradeChange-portlet.xml</value>
					      	</init-param>
							<expiration-cache>0</expiration-cache>
							<supports>
								<mime-type>text/html</mime-type>
					         	<portlet-mode>view</portlet-mode>
							</supports>
							<supported-locale>en</supported-locale>
					        <supported-locale>ar</supported-locale>		
					        <resource-bundle>messages/grade/gradeChange/gradeChange</resource-bundle>
							<portlet-info>
								<title>Grade Change</title>
							</portlet-info>					      						
						</portlet>
	<!--  Incomplete Grade -->
						<portlet>
							<portlet-name>dpsIncompleteGrade</portlet-name>
							<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>	
							<init-param>
					         <name>contextConfigLocation</name>
					         <value>/WEB-INF/context/gradeIncomplete-portlet.xml</value>
